{
  "name": "clean-hotels",
  "version": "1.0.0",
  "description": "Book your stay in one of our rooms",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "db": "nodemon backend/config/db.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/louisep1/clean-hotels.git"
  },
  "author": "L P",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/louisep1/clean-hotels/issues"
  },
  "homepage": "https://github.com/louisep1/clean-hotels#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19"
  }
}
