USE sql12592427;

CREATE TABLE rooms (
    id int NOT NULL,
    room_number int(10),
    location varchar(100),
    type varchar(100),
    rate int(10),
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at DATETIME DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    PRIMARY KEY (ID)
);

